
<%= simple_form_for([@list, @bookmark]) do |f|%>
    <%= f.input :comment %>
    <%= f.association :movie %>
    <% if @bookmark.id %>
      <%= f.submit "Submit", class: "btn btn-default btn-primary m-3" %>
      <%= link_to "Cancel", lists_path, class: "btn btn-light" %>
      <% else %>
      <%= f.submit "Submit", class: "btn btn-default btn-primary m-3" %>
      <%= link_to "Cancel", lists_path, class: "btn btn-secondary" %>
    <% end %>
<% end  %>
